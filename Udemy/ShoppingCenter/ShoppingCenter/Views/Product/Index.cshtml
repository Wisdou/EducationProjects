@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <div class="text-primary">Category list</div>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Create new product</a>
        </div>
    </div>

    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td width="50%">@product.Name</td>
                        <td width="30%">@product.Price</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@product.Id" asp-action="Edit" class="btn btn-primary mx-1" style="min-width: 50%;">
                                    Edit
                                </a>
                                <a asp-route-Id="@product.Id" asp-action="Delete" class="btn btn-danger mx-1" style="min-width: 50%;">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No products exists. </p>
    }
</div>